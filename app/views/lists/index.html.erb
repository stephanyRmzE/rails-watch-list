<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1587986100063-d1c34ca3dc6b?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1074&q=80);">
  <div class="container">
    <h1>Save any kind of movies</h1>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-12">
      <div class = cards>
        <% @lists.each do |list| %>
          <div class = "card-list">
            <a class="link-list" href="<%= list_path(list)%>">
              <div class="card-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
                                    url(<%= cl_image_path list.photo.key %>)">
              </div>
              <div class = "card-description">
                <h2><%= list.name %></h2>
              </div>
            </a>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
