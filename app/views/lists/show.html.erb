
<div class="container">
  <div class="row justify-content-center">
    <div class="col-11">
      <div class="container-superior">
        <h1><%= @list.name %></h1>
        <%= link_to "Add Movie", new_list_bookmark_path(@list), class:"btn btn-flat" %>
      </div>

      <div class = cards>
            <% @list.bookmarks.each do |bookmark| %>

                <div class = card-movie data-controller="show-description" data-action="click->show-description#show">
                  <div class="card-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path bookmark.movie.poster_url %>)">
                    <%= link_to "x", bookmark_path(bookmark), method: :delete, class: "card-remove-link", data: { confirm: "Are you sure?" } %>
                  </div>
                  <div class = "card-title-rating">
                      <h2><%= bookmark.movie.title %></h2>
                      <p><%= bookmark.movie.rating %></p>
                      <i class="fas fa-star"></i>
                    </div>
                  <div class = "card-description" data-show-description-target="description">
                    <p><%= bookmark.movie.overview %></p>
                    <p><%= bookmark.comment %></p>
                  </div>
                </div>

            <% end %>
      </div>
    </div>
  </div>
</div>
