<div data-controller="refresh-list">
<div class="container">
  <div class="row justify-content-center">
    <div class="col-11">
      <div class="container-superior">
        <h1><%= @list.name %></h1>

          <%= form_with url: list_path(@list) , remote: true, method: :get,
          html: { data: {  refresh_list_target: 'form' } } do |f| %>
          <%= f.text_field :query,
                     class: "form-control",
                     placeholder: 'Movie title',
                     value: params[:query],
                     data: {
                      refresh_list_target: 'searchInput',
                      action: "keyup->refresh-list#update",
                    } %>
          <% end %>

        <%= link_to "Add Movie", new_list_bookmark_path(@list), class:"btn btn-flat-purple" %>
      </div>

    <%= render 'list', bookmarks: @bookmarks %>

    </div>
  </div>
</div>
</div>
